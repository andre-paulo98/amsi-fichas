<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.andrepaulo.calculadora.MainActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt2"
        android:layout_alignBottom="@+id/bt2"
        android:layout_toStartOf="@+id/bt2"
        android:contextClickable="false"
        android:text="1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignBaseline="@+id/bt3"
        android:layout_alignBottom="@+id/bt3"
        android:layout_toStartOf="@+id/bt3" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignBaseline="@+id/btDIVIDIR"
        android:layout_alignBottom="@+id/btDIVIDIR"
        android:layout_toStartOf="@+id/btDIVIDIR" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_toStartOf="@+id/bt2"
        android:text="4" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt2"
        android:layout_toEndOf="@+id/bt4"
        android:text="5" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt3"
        android:layout_toEndOf="@+id/bt5"
        android:text="6" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt4"
        android:layout_below="@+id/bt4"
        android:text="7" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt5"
        android:layout_toEndOf="@+id/bt7"
        android:text="8" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt6"
        android:layout_toEndOf="@+id/bt8"
        android:text="9" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt7"
        android:layout_below="@+id/bt7"
        android:text="0" />

    <Button
        android:id="@+id/btDIVIDIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTotal"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="/" />

    <Button
        android:id="@+id/btENTER"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt9"
        android:layout_below="@+id/bt8"
        android:text="ENTER" />

    <Button
        android:id="@+id/btAC"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt0"
        android:layout_below="@+id/bt0"
        android:text="AC" />

    <Button
        android:id="@+id/btLIMPA"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btENTER"
        android:layout_toEndOf="@+id/btAC"
        android:text="--" />

    <Button
        android:id="@+id/btVEZES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt6"
        android:layout_alignBottom="@+id/bt6"
        android:layout_toEndOf="@+id/bt3"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="X" />

    <Button
        android:id="@+id/btMAIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt9"
        android:layout_alignBottom="@+id/bt9"
        android:layout_toEndOf="@+id/bt6"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="+" />

    <Button
        android:id="@+id/btMENOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btMAIS"
        android:layout_toEndOf="@+id/btENTER"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="-" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvContas"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvContas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:textAlignment="textEnd" />

</RelativeLayout>
